<!DOCTYPE html>
<html>
<head>
    <style>
      table {
        width: 80%;
        margin: 30px auto;
        border-collapse: collapse;
      }
      th,
      td {
        padding: 10px;
        border: 1px solid #666;
      }
    </style>

</head>

<body>
<div id="container" style="width:70%; margin: auto;">
<h2>Config Aggregator Rules</h2>


<!-- Aggregator Rules -->
{% if aggregators %}
<div class="panel-group">
  <div class="panel panel-default">
    
    {% for aggregator in aggregators %}
        <div id="volumesTable" class="collapse">
        <h3> Aggregator Name : {{ aggregator['AggregatorName'] }} </h3>
        <table class="table table-striped table-condensed">
            <thead>
            <tr>
                <th>ConfigRuleName</th>
                <th>ResourceType</th>
                <th>AccountId</th>
                <th>AwsRegion</th>
                <th>ResourceId</th>
                
            </tr>
            </thead>
            <tbody>
            {% for rule in aggregator['AggregatorRules'] %}
                <tr>
                <td>{{ rule['ConfigRuleName'] }}</td>
                <td>{{ rule['ResourceType'] }}</td>
                <td>{{ rule['AccountId'] }}</td>
                <td>{{ rule['AwsRegion'] }}</td>
                <td>{{ rule['ResourceId'] }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>
    {% endfor %}
  </div>
</div>
{% endif %}


</div>


</body>

</html>
